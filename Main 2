-- Selected animation
local SelectedAnimId = nil
local SelectedSource = nil

-- Add & Export animation
local function AddAndExport(animId, sourceName)
    if not animId or animId == "" or StolenAnims[animId] then return end
    StolenAnims[animId] = sourceName or "Unknown"

    -- Create Animation instance in ExportFolder
    local AnimObj = Instance.new("Animation")
    AnimObj.Name = sourceName .. " (" .. string.sub(animId, string.len("rbxassetid://")+1) .. ")"
    AnimObj.AnimationId = animId
    AnimObj.Parent = ExportFolder

    -- GUI Entry
    local AnimFrame = Instance.new("Frame")
    AnimFrame.Size = UDim2.new(1, -10, 0, 70)
    AnimFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    AnimFrame.Parent = Scroll
    local AnimCorner = Instance.new("UICorner")
    AnimCorner.CornerRadius = UDim.new(0, 10)
    AnimCorner.Parent = AnimFrame

    local NameLabel = Instance.new("TextLabel")
    NameLabel.Size = UDim2.new(1, -100, 0.5, 0)
    NameLabel.BackgroundTransparency = 1
    NameLabel.Text = "Source: " .. (sourceName or "Unknown")
    NameLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
    NameLabel.TextXAlignment = Enum.TextXAlignment.Left
    NameLabel.Font = Enum.Font.GothamSemibold
    NameLabel.TextSize = 16
    NameLabel.Parent = AnimFrame

    local IdLabel = Instance.new("TextLabel")
    IdLabel.Size = UDim2.new(1, -100, 0.5, 0)
    IdLabel.Position = UDim2.new(0, 0, 0.5, 0)
    IdLabel.BackgroundTransparency = 1
    IdLabel.Text = animId
    IdLabel.TextColor3 = Color3.new(1,1,1)
    IdLabel.TextXAlignment = Enum.TextXAlignment.Left
    IdLabel.Font = Enum.Font.Gotham
    IdLabel.TextSize = 14
    IdLabel.Parent = AnimFrame

    local SelectBtn = Instance.new("TextButton")
    SelectBtn.Size = UDim2.new(0, 80, 1, -10)
    SelectBtn.Position = UDim2.new(1, -90, 0, 5)
    SelectBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
    SelectBtn.Text = "Select"
    SelectBtn.TextColor3 = Color3.new(1,1,1)
    SelectBtn.Font = Enum.Font.GothamBold
    SelectBtn.Parent = AnimFrame
    local SelectCorner = Instance.new("UICorner")
    SelectCorner.Parent = SelectBtn

    SelectBtn.MouseButton1Click:Connect(function()
        SelectedAnimId = animId
        SelectedSource = sourceName
        game.StarterGui:SetCore("SendNotification", {Title = "Selected"; Text = "Ready: " .. (sourceName or "Unknown"); Duration = 3})
    end)
end

-- Scan Workspace for game animations (NPCs/Objects only)
local function ScanForGameAnims()
    for _, obj in pairs(workspace:GetDescendants()) do
        -- Skip player characters
        if Players:GetPlayerFromCharacter(obj) then continue end

        -- Animation instances
        if obj:IsA("Animation") then
            AddAndExport(obj.AnimationId, obj.Parent.Name .. " (Animation)")
        end

        -- Playing tracks on Animators
        if obj:IsA("Animator") then
            for _, track in pairs(obj:GetPlayingAnimationTracks()) do
                if track.Animation and track.Animation.AnimationId then
                    AddAndExport(track.Animation.AnimationId, obj.Parent.Name .. " (Playing Track)")
                end
            end
        end
    end
end

-- Initial + Continuous Scan
spawn(function()
    task.wait(4)
    ScanForGameAnims()
end)

workspace.DescendantAdded:Connect(function(desc)
    task.wait(1)
    if desc:IsA("Animation") or desc:IsA("Animator") then
        ScanForGameAnims()
    end
end)

RunService.Heartbeat:Connect(function()
    task.wait(8)
    ScanForGameAnims()
end)

-- Export Selected (already exported on steal, but highlight)
ExportSelBtn.MouseButton1Click:Connect(function()
    if SelectedAnimId then
        game.StarterGui:SetCore("SendNotification", {Title = "Exported"; Text = "Already in Workspace as .rbxmx! Right-click folder > Save to File"; Duration = 6})
    end
end)

-- Export All (same)
ExportAllBtn.MouseButton1Click:Connect(function()
    game.StarterGui:SetCore("SendNotification", {Title = "All Exported!"; Text = "Check Workspace folder: Right-click > Save to File (.rbxmx)"; Duration = 8})
end)

-- Clear
ClearBtn.MouseButton1Click:Connect(function()
    StolenAnims = {}
    ExportFolder:ClearAllChildren()
    for _, child in pairs(Scroll:GetChildren()) do
        if child:IsA("Frame") then child:Destroy() end
    end
end)

-- Final Notification
game.StarterGui:SetCore("SendNotification", {
    Title = "Game Animation Exporter v4";
    Text = "Stealing game animations... Exported to Workspace as .rbxmx! Right-click folder to download";
    Duration = 10;
})

print("Game Animation Stealer + Exporter v4 Loaded - Exports .rbxmx to Workspace!")
