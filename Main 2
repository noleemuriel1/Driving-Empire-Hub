CopyCorner.Parent = CopyBtn

local CopyAllBtn = Instance.new("TextButton")
CopyAllBtn.Size = UDim2.new(0, 100, 0, 45)
CopyAllBtn.Position = UDim2.new(1, -210, 1, -55)
CopyAllBtn.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
CopyAllBtn.Text = "Copy All"
CopyAllBtn.TextColor3 = Color3.new(0,0,0)
CopyAllBtn.Font = Enum.Font.GothamBold
CopyAllBtn.Parent = Frame
local CopyAllCorner = Instance.new("UICorner")
CopyAllCorner.Parent = CopyAllBtn

local ClearBtn = Instance.new("TextButton")
ClearBtn.Size = UDim2.new(0, 90, 0, 45)
ClearBtn.Position = UDim2.new(1, -110, 1, -55)
ClearBtn.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
ClearBtn.Text = "Clear"
ClearBtn.TextColor3 = Color3.new(0,0,0)
ClearBtn.Font = Enum.Font.GothamBold
ClearBtn.Parent = Frame
local ClearCorner = Instance.new("UICorner")
ClearCorner.Parent = ClearBtn

-- Selected animation
local SelectedAnim = nil

-- Add animation to list
local function AddAnim(animId, sourceName)
    if not animId or animId == "" or StolenAnims[animId] then return end
    StolenAnims[animId] = sourceName or "Unknown"

    local AnimFrame = Instance.new("Frame")
    AnimFrame.Size = UDim2.new(1, -10, 0, 60)
    AnimFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    AnimFrame.Parent = Scroll
    local AnimCorner = Instance.new("UICorner")
    AnimCorner.CornerRadius = UDim.new(0, 10)
    AnimCorner.Parent = AnimFrame

    local NameLabel = Instance.new("TextLabel")
    NameLabel.Size = UDim2.new(1, -100, 0.5, 0)
    NameLabel.BackgroundTransparency = 1
    NameLabel.Text = "Source: " .. (sourceName or "Unknown")
    NameLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
    NameLabel.TextXAlignment = Enum.TextXAlignment.Left
    NameLabel.Font = Enum.Font.GothamSemibold
    NameLabel.TextSize = 16
    NameLabel.Parent = AnimFrame

    local IdLabel = Instance.new("TextLabel")
    IdLabel.Size = UDim2.new(1, -100, 0.5, 0)
    IdLabel.Position = UDim2.new(0, 0, 0.5, 0)
    IdLabel.BackgroundTransparency = 1
    IdLabel.Text = animId
    IdLabel.TextColor3 = Color3.new(1,1,1)
    IdLabel.TextXAlignment = Enum.TextXAlignment.Left
    IdLabel.Font = Enum.Font.Gotham
    IdLabel.TextSize = 14
    IdLabel.Parent = AnimFrame

    local SelectBtn = Instance.new("TextButton")
    SelectBtn.Size = UDim2.new(0, 80, 1, -10)
    SelectBtn.Position = UDim2.new(1, -90, 0, 5)
    SelectBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
    SelectBtn.Text = "Select"
    SelectBtn.TextColor3 = Color3.new(1,1,1)
    SelectBtn.Font = Enum.Font.GothamBold
    SelectBtn.Parent = AnimFrame
    local SelectCorner = Instance.new("UICorner")
    SelectCorner.Parent = SelectBtn

    SelectBtn.MouseButton1Click:Connect(function()
        SelectedAnim = animId
        game.StarterGui:SetCore("SendNotification", {Title = "Selected"; Text = "Ready to play: " .. (sourceName or "Unknown"); Duration = 3})
    end)
end

-- Steal from all non-player models in Workspace
local function ScanWorkspace()
    for _, obj in pairs(Workspace:GetDescendants()) do
        if obj:IsA("Animation") and obj.Parent and obj.Parent.Parent and obj.Parent.Parent ~= LocalPlayer.Character and not Players:GetPlayerFromCharacter(obj.Parent.Parent) then
            AddAnim(obj.AnimationId, obj.Parent.Parent.Name .. " (Animation)")
        end

        if obj:IsA("Animator") and obj.Parent and obj.Parent.Parent and not Players:GetPlayerFromCharacter(obj.Parent.Parent) then
            for _, track in pairs(obj:GetPlayingAnimationTracks()) do
                if track.Animation and track.Animation.AnimationId then
                    AddAnim(track.Animation.AnimationId, obj.Parent.Parent.Name .. " (Playing)")
                end
            end
        end
    end
end

-- Initial scan
spawn(function()
    task.wait(3)
    ScanWorkspace()
end)

-- Continuous scan for new animations (NPCs spawning, tools, etc.)
Workspace.DescendantAdded:Connect(function(desc)
    task.wait(0.5) -- Delay to let load
    if desc:IsA("Animation") or desc:IsA("Animator") then
        ScanWorkspace()
    end
end)

RunService.Heartbeat:Connect(function()
    task.wait(5) -- Scan every 5 seconds for playing tracks
    ScanWorkspace()
end)

-- Play selected
PlayBtn.MouseButton1Click:Connect(function()
    if SelectedAnim then
        for _, track in pairs(Humanoid:GetPlayingAnimationTracks()) do
            track:Stop()
        end
        local anim = Instance.new("Animation")
        anim.AnimationId = SelectedAnim
        local track = Humanoid:LoadAnimation(anim)
        track:Play()
        track.Looped = true
    end
end)

-- Stop all
StopBtn.MouseButton1Click:Connect(function()
    for _, track in pairs(Humanoid:GetPlayingAnimationTracks()) do
        track:Stop()
    end
end)

-- Copy selected
CopyBtn.MouseButton1Click:Connect(function()
    if SelectedAnim then
        setclipboard(SelectedAnim)
        game.StarterGui:SetCore("SendNotification", {Title = "Copied"; Text = SelectedAnim; Duration = 4})
    end
end)

-- Copy all
CopyAllBtn.MouseButton1Click:Connect(function()
    local all = ""
    for id, name in pairs(StolenAnims) do
        all = all .. id .. " -- " .. name .. "\n"
    end
    setclipboard(all)
    game.StarterGui:SetCore("SendNotification", {Title = "Copied All"; Text = #StolenAnims .. " animations copied!"; Duration = 5})
end)

-- Clear
ClearBtn.MouseButton1Click:Connect(function()
    StolenAnims = {}
    for _, child in pairs(Scroll:GetChildren()) do
        if child:IsA("Frame") then child:Destroy() end
    end
end)

-- Notification
game.StarterGui:SetCore("SendNotification", {
    Title = "Game Animation Stealer v3";
    Text = "Loaded! Stealing animations from NPCs/Objects only...";
    Duration = 8;
})

print("Game Animation Stealer v3 Loaded - Focusing on game/NPC animations!")
