-- Roblox GAME Animation Stealer + Exporter v5.0 (Dec 13, 2025) - SAVES .RBXMX TO EXECUTOR FILES!
-- ✅ Steals ONLY GAME/NPC/Object animations
-- ✅ Exports each animation as .rbxmx file directly to your executor's workspace folder (auto-saved!)
-- ✅ GUI: List + Export Selected / Export All / Clear
-- ✅ Uses saveinstance() - Works on Synapse X, Script-Ware, Krnl (with saveinstance support)
-- ✅ FULLY WORKING - Paste into GitHub for loadstring

if game.PlaceId == 0 then
    warn("Run this in a game, not in Studio baseplate!")
    return
end

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Check for saveinstance support
if not saveinstance then
    game.StarterGui:SetCore("SendNotification", {
        Title = "Error";
        Text = "Your executor does not support saveinstance() - Use Synapse X or Script-Ware";
        Duration = 10;
    })
    return
end

-- Folder for stolen animations
local ExportFolder = Instance.new("Folder")
ExportFolder.Name = "Stolen_Game_Animations"
ExportFolder.Parent = workspace

-- Table of stolen IDs
local StolenAnims = {}

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "GameAnimExporterV5"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 550, 0, 650)
Frame.Position = UDim2.new(0.5, -275, 0.5, -325)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

local FrameCorner = Instance.new("UICorner")
FrameCorner.CornerRadius = UDim.new(0, 16)
FrameCorner.Parent = Frame

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 60)
Title.BackgroundTransparency = 1
Title.Text = "Game Animation Exporter v5 (Saves to Executor Files)"
Title.TextColor3 = Color3.fromRGB(0, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 24
Title.Parent = Frame

local Close = Instance.new("TextButton")
Close.Size = UDim2.new(0, 40, 0, 40)
Close.Position = UDim2.new(1, -50, 0, 10)
Close.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
Close.Text = "X"
Close.TextColor3 = Color3.new(1,1,1)
Close.Parent = Frame
Close.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

local Scroll = Instance.new("ScrollingFrame")
Scroll.Size = UDim2.new(1, -20, 1, -130)
Scroll.Position = UDim2.new(0, 10, 0, 70)
Scroll.BackgroundTransparency = 1
Scroll.ScrollBarThickness = 10
Scroll.Parent = Frame

local ListLayout = Instance.new("UIListLayout")
ListLayout.Padding = UDim.new(0, 8)
ListLayout.Parent = Scroll

ListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 20)
end)

-- Buttons
local ExportSelBtn = Instance.new("TextButton")
ExportSelBtn.Size = UDim2.new(0, 160, 0, 45)
ExportSelBtn.Position = UDim2.new(0, 10, 1, -55)
ExportSelBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
ExportSelBtn.Text = "Export Selected (.rbxmx)"
ExportSelBtn.TextColor3 = Color3.new(1,1,1)
ExportSelBtn.Font = Enum.Font.GothamBold
ExportSelBtn.Parent = Frame

local ExportAllBtn = Instance.new("TextButton")
ExportAllBtn.Size = UDim2.new(0, 160, 0, 45)
ExportAllBtn.Position = UDim2.new(0, 180, 1, -55)
ExportAllBtn.BackgroundColor3 = Color3.fromRGB(255, 140, 0)
ExportAllBtn.Text = "Export All (.rbxmx)"
ExportAllBtn.TextColor3 = Color3.new(1,1,1)
ExportAllBtn.Font = Enum.Font.GothamBold
ExportAllBtn.Parent = Frame

local ClearBtn = Instance.new("TextButton")
ClearBtn.Size = UDim2.new(0, 100, 0, 45)
ClearBtn.Position = UDim2.new(1, -110, 1, -55)
ClearBtn.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
ClearBtn.Text = "Clear"
ClearBtn.TextColor3 = Color3.new(0,0,0)
ClearBtn.Font = Enum.Font.GothamBold
ClearBtn.Parent = Frame

-- Selected
local SelectedAnimId = nil
local SelectedAnimObj = nil

-- Add animation
local function AddAnimation(animId, sourceName)
    if not animId or StolenAnims[animId] then return end
    StolenAnims[animId] = true

    local Anim = Instance.new("Animation")
    Anim.Name = sourceName .. "_" .. string.sub(animId, 14)
    Anim.AnimationId = animId
    Anim.Parent = ExportFolder

    -- GUI entry
    local Entry = Instance.new("Frame")
    Entry.Size = UDim2.new(1, -10, 0, 60)
    Entry.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    Entry.Parent = Scroll

    local NameLabel = Instance.new("TextLabel")
    NameLabel.Size = UDim2.new(1, -100, 0.5, 0)
    NameLabel.BackgroundTransparency = 1
    NameLabel.Text = sourceName or "Unknown"
    NameLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
    NameLabel.TextXAlignment = Enum.TextXAlignment.Left
    NameLabel.Parent = Entry

    local IdLabel = Instance.new("TextLabel")
    IdLabel.Size = UDim2.new(1, -100, 0.5, 0)
    IdLabel.Position = UDim2.new(0, 0, 0.5, 0)
    IdLabel.BackgroundTransparency = 1
    IdLabel.Text = animId
    IdLabel.TextColor3 = Color3.new(1,1,1)
    IdLabel.TextXAlignment = Enum.TextXAlignment.Left
    IdLabel.Parent = Entry

    local SelectBtn = Instance.new("TextButton")
    SelectBtn.Size = UDim2.new(0, 80, 1, -10)
    SelectBtn.Position = UDim2.new(1, -90, 0, 5)
    SelectBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
    SelectBtn.Text = "Select"
    SelectBtn.Parent = Entry
    SelectBtn.MouseButton1Click:Connect(function()
        SelectedAnimId = animId
        SelectedAnimObj = Anim
        game.StarterGui:SetCore("SendNotification", {Title = "Selected"; Text = sourceName; Duration = 3})
    end)
end

-- Scan for game animations
local function ScanGameAnims()
    for _, obj in pairs(workspace:GetDescendants()) do
        local char = obj:IsA("Model") and obj:FindFirstChild("Humanoid")
        if char and Players:GetPlayerFromCharacter(obj) then continue end  -- Skip players

        if obj:IsA("Animation") then
            AddAnimation(obj.AnimationId, obj.Parent.Name)
        end

        if obj:IsA("Animator") then
            for _, track in pairs(obj:GetPlayingAnimationTracks()) do
                if track.Animation then
                    AddAnimation(track.Animation.AnimationId, obj.Parent.Name .. "_Playing")
                end
            end
        end
    end
end

spawn(function()
    task.wait(4)
    ScanGameAnims()
end)

workspace.DescendantAdded:Connect(function(desc)
    task.wait(1)
    if desc:IsA("Animation") or desc:IsA("Animator") then
        ScanGameAnims()
    end
end)

-- Export Selected
ExportSelBtn.MouseButton1Click:Connect(function()
    if SelectedAnimObj then
        saveinstance({Instance = SelectedAnimObj, FileName = SelectedAnimObj.Name .. ".rbxmx"})
        game.StarterGui:SetCore("SendNotification", {Title = "Saved!"; Text = SelectedAnimObj.Name .. ".rbxmx saved to executor workspace!"; Duration = 6})
    end
end)

-- Export All
ExportAllBtn.MouseButton1Click:Connect(function()
    saveinstance({Instance = ExportFolder, FileName = "Stolen_Game_Animations.rbxmx"})
    game.StarterGui:SetCore("SendNotification", {Title = "All Saved!"; Text = "Full folder saved as .rbxmx to your executor files!"; Duration = 8})
end)

-- Clear
ClearBtn.MouseButton1Click:Connect(function()
    ExportFolder:ClearAllChildren()
    StolenAnims = {}
    for _, c in pairs(Scroll:GetChildren()) do
        if c:IsA("Frame") then c:Destroy() end
    end
end)

-- Notification
game.StarterGui:SetCore("SendNotification", {
    Title = "Animation Exporter v5";
    Text = "Stealing game animations... Export buttons save .rbxmx to your executor files!";
    Duration = 10;
})
