local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local HttpService = game:GetService("HttpService")

-- Wait for character
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

-- Table to store stolen animations
local StolenAnims = {}

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AnimStealer"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 500, 0, 600)
Frame.Position = UDim2.new(0.5, -250, 0.5, -300)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

local Corner = Instance.new("UICorner")
Corner.CornerRadius = UDim.new(0, 12)
Corner.Parent = Frame

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundTransparency = 1
Title.Text = "ðŸ”¥ Universal Animation Stealer v2"
Title.TextColor3 = Color3.fromRGB(0, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 24
Title.Parent = Frame

local Close = Instance.new("TextButton")
Close.Size = UDim2.new(0, 40, 0, 40)
Close.Position = UDim2.new(1, -50, 0, 5)
Close.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
Close.Text = "X"
Close.TextColor3 = Color3.new(1,1,1)
Close.Font = Enum.Font.GothamBold
Close.Parent = Frame
local CloseCorner = Instance.new("UICorner")
CloseCorner.Parent = Close
Close.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

-- Scrolling Frame for list
local Scroll = Instance.new("ScrollingFrame")
Scroll.Size = UDim2.new(1, -20, 1, -120)
Scroll.Position = UDim2.new(0, 10, 0, 60)
Scroll.BackgroundTransparency = 1
Scroll.ScrollBarThickness = 8
Scroll.Parent = Frame

local ListLayout = Instance.new("UIListLayout")
ListLayout.Padding = UDim.new(0, 5)
ListLayout.Parent = Scroll

ListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0, 0, 0, ListLayout.AbsoluteContentSize.Y + 10)
end)

-- Buttons
local ButtonY = Frame.Size.Y.Offset - 50

local PlayBtn = Instance.new("TextButton")
PlayBtn.Size = UDim2.new(0, 100, 0, 40)
PlayBtn.Position = UDim2.new(0, 10, 1, -50)
PlayBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
PlayBtn.Text = "Play Selected"
PlayBtn.TextColor3 = Color3.new(1,1,1)
PlayBtn.Font = Enum.Font.GothamBold
PlayBtn.Parent = Frame
local PlayCorner = Instance.new("UICorner")
PlayCorner.Parent = PlayBtn

local StopBtn = Instance.new("TextButton")
StopBtn.Size = UDim2.new(0, 100, 0, 40)
StopBtn.Position = UDim2.new(0, 120, 1, -50)
StopBtn.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
StopBtn.Text = "Stop All"
StopBtn.TextColor3 = Color3.new(1,1,1)
StopBtn.Font = Enum.Font.GothamBold
StopBtn.Parent = Frame
local StopCorner = Instance.new("UICorner")
StopCorner.Parent = StopBtn

local CopyBtn = Instance.new("TextButton")
CopyBtn.Size = UDim2.new(0, 120, 0, 40)
CopyBtn.Position = UDim2.new(0, 230, 1, -50)
CopyBtn.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
CopyBtn.Text = "Copy Selected ID"
CopyBtn.TextColor3 = Color3.new(0,0,0)
CopyBtn.Font = Enum.Font.GothamBold
CopyBtn.Parent = Frame
local CopyCorner = Instance.new("UICorner")
CopyCorner.Parent = CopyBtn

local CopyAllBtn = Instance.new("TextButton")
CopyAllBtn.Size = UDim2.new(0, 100, 0, 40)
CopyAllBtn.Position = UDim2.new(1, -110, 1, -50)
CopyAllBtn.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
CopyAllBtn.Text = "Copy All"
CopyAllBtn.TextColor3 = Color3.new(0,0,0)
CopyAllBtn.Font = Enum.Font.GothamBold
CopyAllBtn.Parent = Frame
local CopyAllCorner = Instance.new("UICorner")
CopyAllCorner.Parent = CopyAllBtn

local ClearBtn = Instance.new("TextButton")
ClearBtn.Size = UDim2.new(0, 80, 0, 40)
ClearBtn.Position = UDim2.new(1, -200, 1, -50)
ClearBtn.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
ClearBtn.Text = "Clear List"
ClearBtn.TextColor3 = Color3.new(0,0,0)
ClearBtn.Font = Enum.Font.GothamBold
ClearBtn.Parent = Frame
local ClearCorner = Instance.new("UICorner")
ClearCorner.Parent = ClearBtn

-- Selected animation
local SelectedAnim = nil

-- Function to add animation to list
local function AddAnim(animId, name)
    if StolenAnims[animId] then return end
    StolenAnims[animId] = name or "Unknown"

    local AnimFrame = Instance.new("Frame")
    AnimFrame.Size = UDim2.new(1, -10, 0, 50)
    AnimFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    AnimFrame.Parent = Scroll
    local AnimCorner = Instance.new("UICorner")
    AnimCorner.Parent = AnimFrame

    local AnimLabel = Instance.new("TextLabel")
    AnimLabel.Size = UDim2.new(1, -100, 1, 0)
    AnimLabel.BackgroundTransparency = 1
    AnimLabel.Text = name .. " - " .. animId
    AnimLabel.TextColor3 = Color3.new(1,1,1)
    AnimLabel.TextXAlignment = Enum.TextXAlignment.Left
    AnimLabel.TextTruncate = Enum.TextTruncate.AtEnd
    AnimLabel.Font = Enum.Font.Gotham
    AnimLabel.TextSize = 14
    AnimLabel.Parent = AnimFrame

    local SelectBtn = Instance.new("TextButton")
    SelectBtn.Size = UDim2.new(0, 80, 1, 0)
    SelectBtn.Position = UDim2.new(1, -90, 0, 0)
    SelectBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
    SelectBtn.Text = "Select"
    SelectBtn.TextColor3 = Color3.new(1,1,1)
    SelectBtn.Font = Enum.Font.GothamBold
    SelectBtn.Parent = AnimFrame
    local SelectCorner = Instance.new("UICorner")
    SelectCorner.Parent = SelectBtn

    SelectBtn.MouseButton1Click:Connect(function()
        SelectedAnim = animId
        Rayfield:Notify({Title = "Selected", Content = "Playing: " .. name .. " (" .. animId .. ")"})
    end)
end

-- Steal default animations
spawn(function()
    task.wait(2)
    local DefaultAnims = {
        {id = Humanoid:FindFirstChild("Animate").idle.Animation1.AnimationId, name = "Idle"},
        {id = Humanoid:FindFirstChild("Animate").walk.WalkAnim.AnimationId, name = "Walk"},
        {id = Humanoid:FindFirstChild("Animate").run.RunAnim.AnimationId, name = "Run"},
        {id = Humanoid:FindFirstChild("Animate").jump.JumpAnim.AnimationId, name = "Jump"},
        {id = Humanoid:FindFirstChild("Animate").fall.FallAnim.AnimationId, name = "Fall"},
        {id = Humanoid:FindFirstChild("Animate").climb.ClimbAnim.AnimationId, name = "Climb"},
        {id = Humanoid:FindFirstChild("Animate").swim.Swim.AnimationId, name = "Swim"},
    }
    for _, anim in pairs(DefaultAnims) do
        if anim.id then
            AddAnim(anim.id, anim.name)
        end
    end
end)

-- Steal playing animations from all players
RunService.Heartbeat:Connect(function()
    pcall(function()
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                for _, track in pairs(player.Character.Humanoid:GetPlayingAnimationTracks()) do
                    local animId = track.Animation.AnimationId
                    if animId and not StolenAnims[animId] then
                        AddAnim(animId, player.Name .. "'s Anim")
                    end
                end
            end
        end
    end)
end)

-- Play selected
PlayBtn.MouseButton1Click:Connect(function()
    if SelectedAnim then
        local anim = Instance.new("Animation")
        anim.AnimationId = SelectedAnim
        local track = Humanoid:LoadAnimation(anim)
        track:Play()
    end
end)

-- Stop all
StopBtn.MouseButton1Click:Connect(function()
    for _, track in pairs(Humanoid:GetPlayingAnimationTracks()) do
        track:Stop()
    end
end)

-- Copy selected ID
CopyBtn.MouseButton1Click:Connect(function()
    if SelectedAnim then
        setclipboard(SelectedAnim)
        Rayfield:Notify({Title = "Copied", Content = SelectedAnim})
    end
end)

-- Copy all IDs
CopyAllBtn.MouseButton1Click:Connect(function()
    local allIds = ""
    for id, name in pairs(StolenAnims) do
        allIds = allIds .. id .. " -- " .. name .. "\n"
    end
    setclipboard(allIds)
    Rayfield:Notify({Title = "Copied All", Content = #StolenAnims .. " animations copied!"})
end)

-- Clear list
ClearBtn.MouseButton1Click:Connect(function()
    StolenAnims = {}
    for _, child in pairs(Scroll:GetChildren()) do
        if child:IsA("Frame") then child:Destroy() end
    end
end)

-- Notification
game.StarterGui:SetCore("SendNotification", {
    Title = "Animation Stealer v2";
    Text = "Loaded! Stealing animations from everyone in game...";
    Duration = 8;
})

print("Universal Animation Stealer v2 Loaded - Stealing all animations!")
